#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "Running ESLint and Prettier checks..."

npm run lint:fix

# Run ESLint with verbose output
echo "ğŸ” Running ESLint..."
npm run lint -- --debug
if [ $? -ne 0 ]; then
  echo "âŒ ESLint failed. Here are the issues:"
  npm run lint
  exit 1
fi

# Format with Prettier
echo "ğŸ” Running Prettier..."
npx prettier --write "src/**/*.{js,jsx,json,ts,tsx}"
if [ $? -ne 0 ]; then
  echo "âŒ Prettier failed. Please fix the issues and try again."
  exit 1
fi


echo "âœ… Code is clean. Proceeding with commit."
exit 0
